{
  "name": "big-dipper-2.0-cosmos",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --no-cache --continue --concurrency=50%",
    "build": "turbo run build --continue --concurrency=50%",
    "start": "turbo run start --continue --concurrency=50%",
    "type-check": "turbo run type-check --continue",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint --continue --concurrency=50%",
    "test": "turbo run test --continue --concurrency=50%",
    "clean": "turbo run clean --continue --concurrency=50%",
    "e2e": "turbo run e2e --continue --concurrency=50%",
    "graphql:codegen": "turbo run graphql:codegen --continue --concurrency=50%"
  },
  "dependencies": {
    "@changesets/cli": "^2.25.0",
    "dotenv-cli": "^6.0.0"
  },
  "devDependencies": {
    "prettier": "^2.7.1",
    "turbo": "latest"
  },
  "packageManager": "yarn@3.2.4",
  "engines": {
    "node": ">=16.13.0",
    "yarn": ">=3.2.4"
  }
}
