{
  "name": "big-dipper-2.0-cosmos",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "CHAIN_NAME=$1 CHAIN_TYPE=$2 turbo run build",
    "clean": "turbo run clean",
    "dev": "CHAIN_NAME=$1 CHAIN_TYPE=$2 turbo run dev --parallel",
    "start": "CHAIN_NAME=$1 CHAIN_TYPE=$2 turbo run start --parallel",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "CHAIN_NAME=$1 CHAIN_TYPE=$2 turbo run test",
    "e2e": "CHAIN_NAME=$1 CHAIN_TYPE=$2 turbo run e2e",
    "graphql:codegen": "CHAIN_NAME=$1 CHAIN_TYPE=$2 turbo run graphql:codegen"
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "prettier": "latest",
    "turbo": "latest"
  },
  "packageManager": "yarn@3.2.4",
  "engines": {
    "node": ">=16.13.0",
    "yarn": ">=3.2.4"
  }
}
