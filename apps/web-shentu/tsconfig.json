{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*", "../../packages/ui/src/*"],
      "@/public/*": ["public/*"],
      "ui/*": ["../../packages/ui/src/*"]
    }
  },
  "references": [{ "path": "../../packages/ui", "prepend": true }],
  "include": [
    "*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../packages/ui/*.d.ts",
    "../../packages/ui/src/**/*.ts",
    "../../packages/ui/src/**/*.tsx"
  ],
  "exclude": ["dist", "build", "node_modules", "cypress"]
}
